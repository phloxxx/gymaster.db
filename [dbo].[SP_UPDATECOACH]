SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO
ALTER PROCEDURE [dbo].[SP_UPDATECOACH]
	@COACH_ID SMALLINT,
    @COACH_FNAME VARCHAR(50) = NULL,
    @COACH_LNAME VARCHAR(30) = NULL,
    @EMAIL VARCHAR(50) = NULL,
    @PHONE_NUMBER VARCHAR(15) = NULL,
    @SPECIALIZATION VARCHAR(550) = NULL,
	@IS_ACTIVE BIT = NULL
AS
BEGIN
    UPDATE COACH
    SET COACH_FNAME = COALESCE(@COACH_FNAME, COACH_FNAME),
        COACH_LNAME = COALESCE(@COACH_LNAME, COACH_LNAME),
        EMAIL = COALESCE(@EMAIL, EMAIL),
		PHONE_NUMBER = COALESCE(@PHONE_NUMBER, PHONE_NUMBER),
		SPECIALIZATION = COALESCE(@SPECIALIZATION, SPECIALIZATION),
        IS_ACTIVE = COALESCE(@IS_ACTIVE, IS_ACTIVE)
    WHERE COACH_ID = @COACH_ID
END
